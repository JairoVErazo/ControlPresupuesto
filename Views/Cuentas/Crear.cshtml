@model CuentaCreateDTO
@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear Cuenta</h1>
<h5>La cuenta se refiere a los distintos balances que se tienen ya sea:
    Tarjeta de crédito, Efectivo, Ahorro etc
</h5>

<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

    <div class="mb-3">
        <input asp-for="Nombre" placeholder="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoCuentaId" class="form-label"></label>
        <select asp-for="TipoCuentaId" asp-items="Model.TiposCuentas" class="form-select"></select>
        <span asp-validation-for="TipoCuentaId" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <input asp-for="Balance" placeholder="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <textarea asp-for="Descripcion" placeholder="Descripción" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
